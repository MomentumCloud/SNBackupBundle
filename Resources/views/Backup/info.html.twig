{% extends "SNBackupBundle:Backup:base.html.twig" %}

{% block content %}
  <h1>{{ backup.filename }}</h1>
  <dl class="dl-horizontal">
    <dt>Size</dt>
    <dd>{{ backup.filesize }}</dd>
    <dt>Date</dt>
    <dd>{{ backup.timestamp|date('d/m/Y H:i') }}</dd>
    <dt>Type</dt>
    <dd>{{ backup.type }}</dd>
  </dl>
{% endblock %}
